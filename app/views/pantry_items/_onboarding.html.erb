<!-- Onboarding card for empty pantry -->
<div class="onboarding-card">
  <div class="onboarding-emoji">ðŸ¥•</div>

  <h2 class="onboarding-title">
    <%= t("pantry_items.index.onboarding_title") %>
  </h2>

  <p class="onboarding-description">
    <%= t("pantry_items.index.onboarding_description") %>
  </p>

  <ol class="onboarding-steps">
    <li><%= t("pantry_items.index.onboarding_step_1") %></li>
    <li><%= t("pantry_items.index.onboarding_step_2") %></li>
    <li><%= t("pantry_items.index.onboarding_step_3") %></li>
  </ol>

  <div class="onboarding-actions">
    <button type="button" class="btn btn-primary" onclick="openModal()">
      <%= t("pantry_items.index.add_first_ingredient_button") %>
    </button>

    <p class="onboarding-actions-hint">
      <%= t("pantry_items.index.onboarding_actions_hint") %>
    </p>
  </div>

  <div class="onboarding-examples">
    <p class="onboarding-examples-title">
      <%= t("pantry_items.index.onboarding_examples_title") %>
    </p>

    <div class="ingredient-chips">
      <% %w[eggs milk flour sugar olive\ oil].each do |ingredient| %>
        <button
          type="button"
          class="ingredient-chip"
          onclick="openModalWithIngredient('<%= j(ingredient) %>')"
        >
          <%= ingredient.humanize %>
        </button>
      <% end %>
    </div>

    <p class="onboarding-examples-hint">
      <%= t("pantry_items.index.onboarding_examples_hint") %>
    </p>
  </div>
</div>
