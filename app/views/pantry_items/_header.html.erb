<!-- Normal view when pantry has items -->
<div class="pantry-header">
  <p class="pantry-header-text">
    <%= raw(@pantry_items_presenter.text_header.gsub(/(\d+)/, '<strong>\1</strong>')) %>
  </p>

  <div class="pantry-header-actions">
    <%= link_to t("pantry_items.index.find_recipes_button"), recipes_path, class: "btn btn-primary" %>

    <button type="button" class="btn btn-secondary" onclick="openModal()">
      <%= t("pantry_items.index.add_ingredient_button") %>
    </button>
  </div>
</div>
